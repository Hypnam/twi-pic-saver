{
  "name": "TwiPicSaver",
  "description": "Save Twitter images.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "downloads", "tabs"],
  "host_permissions": ["https://pbs.twimg.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Run extension."
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
